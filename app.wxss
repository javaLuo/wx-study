/**app.wxss**/
.container {

  display: flex;
  height: 100vh;
  box-sizing: border-box;
  overflow:hidden;
}
.container .menu{
  flex: none;
  min-width: 20%;
  height: 100vh;
  width: auto;
  border-right:solid 1px #f0f0f0;
}
.container .menu view{
  text-align: center;
  font-size: 14px;
  padding: 10px 5px;
  border-bottom: solid 1px #f0f0f0;
  transition: all 300ms;
  box-sizing:border-box;
}
.container .menu view:active{
  background-color: #55aaee;
  color: #fff;
}
.container .menu view.chosed{
  background-color: #55aaee;
  color: #fff;
}
.container .containt-box{
  position: relative;
  flex: 1;
  height: 100vh;
  overflow: hidden;
  background-color: #ddd;
  perspective: 600px;
}

.container .containt-box>.containt{
  position: absolute;
  background-color: #fff;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  transform: rotateY(180deg) scale(0.5,0.5);
  transition: all 800ms;
  opacity: 0;
  z-index: 1;
  box-sizing: border-box;
  transform-style: preserve-3d;
  padding:0 10px;
}
.container .containt-box>.containt:nth-child(2n+1){
  transform: rotateY(-180deg) scale(0.5,0.5);
}
.container .containt-box>.containt.chosed{
  transform: rotateY(0) scale(1,1);
  opacity: 1;
  z-index: 2;
}
.container .containt-box>.containt .num{
  font-size: 12px;
  color: #888;
}
.container .containt-box>.containt .q-one{
  padding: 10px 0;
  letter-spacing: 1px;
  color: #333;
  font-size: 14px;
  word-break:break-all;
  word-wrap:break-word;
  text-align: justify;
}
.container .containt-box>.containt .q-one+.q-one{
  border-top: solid 1px #f0f0f0;
}